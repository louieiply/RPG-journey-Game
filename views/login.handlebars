<div class="row d-flex justify-content-center">
  <div class="col-10 alert alert-danger"  id="loginAlert" role="alert" style="display:none">
    Please check your login Details
  </div>
  <div class="col-10 alert alert-danger"  id="signupAlert" role="alert" style="display:none">
    Please check your sign up Details
  </div>
  <div class="col-md-4">
    <h2>Login</h2>

    <form class="form login-form">

      <div class="form-group row">
        <label for="email-login" class="col-sm-2 col-form-label">email:</label>
        <div class="col-sm-10">
          <input class="form-input" type="text" id="email-login" />
        </div>
        
      </div>

      <div class="form-group row">
        <label for="password-login" class="col-sm-2 col-form-label">password:</label>
        <div class="col-sm-10">
          <input class="form-input" type="password" id="password-login" />
        </div>
      </div>

      <div class="form-group">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
    </form>
  </div>



  <div class="col-md-4">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div class="form-group row">
        <label for="name-signup" class="col-sm-2 col-form-label">name:</label>
        <div class="col-sm-10">
          <input class="form-input" type="text" id="name-signup" />
        </div>
        
      </div>
      <div class="form-group">
        <label for="email-signup" class="col-sm-2 col-form-label">email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup" class="col-sm-2 col-form-label">password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">signup</button>
      </div>
    </form>
  </div>
  
</div>
<script src="./js/sign-up.js"></script>
<script src="./js/login.js"></script>

<div class="container">

  <div class="row">
    <div class="alert alert-success" role="alert" id="welcomeAlert">
      Hi {{name}}, this is your profile page. You can see the stories that you have left off last time.
    </div>
    <div class="my-4 col-auto">
      <h2 class="is-size-3">Welcome, {{name}}!</h2>
    </div>



    {{#each games as |game|}}

    <div class="card col-12 mx-auto">
      <div class="card-body">
        <a href="/story/{{game.id}}">
          <h5 class="card-title">{{game.game_name}}</h5>
        </a>
        <h6 class="card-subtitle mb-2 text-muted">Category: {{game.category.category_name}}</h6>
        <p class="card-text">Author Name: {{game.user.name}}</p>
        <p class="card-text">{{format_date game.date_created}}</p>
        <p class="card-text">{{game.description}}</p>
      </div>
    </div>


    {{/each}}


    <div class="col d-flex justify-content-end align-items-end my-5">

      <button class="btn btn-primary" type="button" onclick="window.location.href='/newstory'">
        Add Story
      </button>
    </div>
  </div>
</div>
